<!DOCTYPE html>
<html>
	<!-- TODO name the default Parameters if left blank -->
	<%= arr = device_array; nil %>
	<% if !arr.empty? then %>
		<%= arr.each do |device| %>
			<%= button_to(device.getName, sensor_path(device.getId), method: :get) %>
		<% end %>
	<% end %>


	<%= form_tag( authenticated_root_path , method: :post) do %>
		<%= text_field_tag(:device_name, nil, placeholder: 'Device name..') %>
		<%= submit_tag("Generate New Device Key") %>
	<% end %> <br>

	<%= button_to "Logout", destroy_user_session_path , method: :delete %> 

</html>

