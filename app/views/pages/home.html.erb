<!DOCTYPE html>
<html>
	<!-- TODO grey out submit button while generating, until stop generating button is pushed -->
	<%= form_tag( root_path , method: :post) do %>  
		<%= label_tag(:url, "URL:") %>
		<%= text_field_tag(:url) %> <br>

		<%= label_tag(:rate, "Data Generation Rate:") %>
		<%= text_field_tag(:rate) %> <br>

		<%= submit_tag("Generate Data") %>
	<% end %> <br>

	<%= button_to "Stop Generating Data", root_path , method: :delete %>

	
	
</html>

